<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <hakobastvatsatryan.DropdownTextView
            android:id="@+id/first_dropdown_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:bg_drawable_expanded_ddtv="@drawable/bg_first_dropdown_text_view_expanded"
            app:bg_drawable_regular_ddtv="@drawable/bg_first_dropdown_text_view_regular"
            app:content_padding_ddtv="@dimen/drop_down_text_view_content_padding"
            app:content_text_ddtv="@string/dropdown_content_text"
            app:content_text_color_ddtv="@color/first_drop_down_text_view_content"
            app:panel_padding_ddtv="@dimen/drop_down_text_view_panel_padding"
            app:title_text_ddtv="@string/dropdown_title_text"
            app:title_text_color_ddtv="@color/first_drop_down_text_view_title"/>

        <hakobastvatsatryan.DropdownTextView
            android:id="@+id/second_dropdown_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:bg_drawable_expanded_ddtv="@drawable/bg_second_dropdown_text_view_expanded"
            app:bg_drawable_regular_ddtv="@drawable/bg_second_dropdown_text_view_regular"
            app:content_text_color_ddtv="@color/second_drop_down_text_view_content"
            app:title_text_color_ddtv="@color/second_drop_down_text_view_title"/>

        <hakobastvatsatryan.DropdownTextView
            android:id="@+id/themed_dropdown_text_view"
            style="@style/SupportDropdownTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title_text_ddtv="Themed text"
            app:content_text_ddtv="@string/dropdown_content_text"/>
    </LinearLayout>
</ScrollView>